<div class="relative z-10 h-full flex-1 min-w-0 overflow-y-auto text-center bg-white">
  <div class="min-h-[50px]">
    <img
      decoding="async"
      loading="lazy"
      :src="navbarImage"
      alt="Navigation Bar"
      class="w-full h-[50px]">
  </div>
  <div class="flex flex-col p-4 space-y-4 pt-9 pb-0 min-h-[calc(100%-160px)]">
    <div class="mb-2">
      <h2
        class="mb-2 text-2xl font-bold uppercase"
        :class="tutorialStep >= 3 && 'editable-region'"
        :contenteditable="tutorialStep >= 3"
        x-effect="let h = heading; if (document.activeElement !== $el) $el.textContent = h"
        @input="heading = $el.textContent; onEdit('heading')"></h2>
      <p
        style="white-space: pre-line;"
        x-effect="let d = description; if (document.activeElement !== $el) $el.innerText = d"></p>
    </div>
    <div class="mb-2">
      <img
        decoding="async"
        loading="lazy"
        class="object-contain w-full rounded-md h-60"
        :src="heroImage"
        alt="Hero">
    </div>
    <div class="mb-2">
      <button
        class="px-4 py-2 mt-4 font-bold text-white rounded"
        style="background-color: #3b2d63;"
        x-effect="let t = buttonText; if (document.activeElement !== $el) $el.textContent = t"></button>
    </div>
  </div>
  <div class="min-h-[82px] pt-4 px-4">
    <img
      decoding="async"
      loading="lazy"
      :src="footerImage"
      alt="Footer"
      class="w-full h-[82px]">
  </div>
  <div
    x-show="tutorialStep <= 4"
    x-transition:leave="transition ease-out duration-300"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    class="absolute inset-0 z-10 pointer-events-none"
    style="background: rgba(255, 255, 255, 0.6);"></div>
</div>
